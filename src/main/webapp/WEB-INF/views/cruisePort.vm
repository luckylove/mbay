<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<script src="resources/js/cruisePort.js"></script>
<link href="resources/css/summernote.css" rel="stylesheet">

<script src="resources/js/summernote.min.js"></script>

<div class="row"  ng-controller="UserGroupCtrl">
    <div class="col-xs-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Cruise Port</strong></h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" name="form" ng-submit="submit(form)" novalidate>
                    <div class="form-group">
                        <label for="inputName" class="control-label col-xs-3">Cruise name</label>
                        <div class="col-xs-9">
                            <input type="hidden"  ng-model="userForm.id"/>
                            <input type="text"  ng-model="userForm.name" class="form-control" id="inputName" placeholder="cruise name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddr" class="control-label col-xs-3">Port Address</label>
                        <div class="col-xs-9">
                            <textarea class="form-control"  ng-model="userForm.address" id="inputAddr" placeholder="Address" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputMobile" class="control-label col-xs-3">Latitute</label>
                        <div class="col-xs-9">
                            <input type="text" name="user111"  ng-model="userForm.lati" class="form-control" id="inputMobile" placeholder="Latitute" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPass"  class="control-label col-xs-3">Longitute</label>
                        <div class="col-xs-9">
                            <input type="text" name="pass111"  ng-model="userForm.longti" class="form-control" id="inputPass" placeholder="Longitute" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPass"  class="control-label col-xs-3">About Us</label>
                        <div class="col-xs-9">
                            <input type="text" name="pass111"  ng-model="userForm.aboutUs" class="form-control" id="inputPass" placeholder="About us" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPass"  class="control-label col-xs-3">Infomation</label>
                        <div class="col-xs-9">
                            <div id="summernoteInfo"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPass"  class="control-label col-xs-3">Surcharge</label>
                        <div class="col-xs-9">
                            <div id="summernoteSurcharge"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPass"  class="control-label col-xs-3">Direction</label>
                        <div class="col-xs-9">
                            <div id="summernoteDirection"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right" style="margin-right: 20px">
                            <button class="btn btn-primary" type="submit">Update</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
